@{
    ViewData["Title"] = "Send Email";
}
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Send Email</h2>
                        <p>Home <span>-</span> Send Email</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->

<!--================login_part Area =================-->
<section class="login_part padding_top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>You not remember password ?</h2>
                        <p>
                            Enter email using register account to reset password
                        </p>
                        <a href="/AuthPage" class="btn_3">Login now</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <form class="row contact_form" asp-action="SendResetEmail" method="post" novalidate="novalidate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-12 form-group p_star">
                                <input type="email" class="form-control" required="required" name="Email"
                                       placeholder="Email">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                @if (TempData["info"] != null)
                                {
                                    <div class="alert alert-info">
                                        @TempData["info"]
                                    </div>
                                }
                            </div>
                            
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">
                                    Reset Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>